<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="author" content="Kizy Matzenbacher">
    @*Icon Image*@
    <link rel="icon" type="image/x-icon" href="~/img/icon.png">
    @*Root Links*@
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/default.css" rel="stylesheet">
</head>
<body class="custom-background">
    @*Navbar*@
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" asp-controller="FirstView" asp-action="Index">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="FirstView" asp-action="gradeCalculator">Grade Calculator</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container my-5">
        @RenderBody()
    </div>

    <footer class="bg-light py-3">
        Copyright © Kizy Matzenbacher 2023. All rights reserved.
    </footer>

    @*js Links*@
    <script src="~/lib/jquery/jquery-3.6.3.min.js"></script>
    <script src="~/js/gradeCalculator.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>

</body>
</html>
